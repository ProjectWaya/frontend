<h2>Onboarding</h2>

<form {{action "setInfo" on="submit"}}>

	<h3>Where are you?</h3>
	<label>Country</label>
    {{#power-select options=countries selected=defaultCountry onchange=(action "onCountrySelected") as |country|}}
      {{country}}
    {{/power-select}}
    <label>City</label>
    {{#power-select options=cities selected=defaultCity onchange=(action "onCitySelected") as |city|}}
      {{city}}
    {{/power-select}}

    <ul>
      {{#each roles as |role|}}
          <li>
            {{radio-button
            value=role
            groupValue=currentRole
            }}
              <label>{{role}}</label>
          </li>
      {{/each}}
    </ul>
    <input type="submit" value="Continue"/>

</form>
